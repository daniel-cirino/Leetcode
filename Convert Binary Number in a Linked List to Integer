# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def getDecimalValue(self, head: ListNode) -> int:
        res = 0
       
        while head:
            res = 2*res + head.val
            head = head.next
            
             # 2 * 0 + head.val = 1
             # head = head.next
             # 2 * 1 + head.val = 0
             # head.next
             # 2 * 1 + head.val = 5
            
        return res
